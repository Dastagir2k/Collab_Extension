{
    "manifest_version": 3,
    "name": "Collab Tool5 ",
    "version": "1.0",
    "description": "Collab tool with Highlight text on any webpage, copy it along with the page URL, and display it in the popup.",
    "action": {
      "default_title": "Open Side Panel"
    },
    "side_panel": {
      "default_path": "index.html"
    },
    "permissions": ["activeTab", "storage", "scripting", "contextMenus","sidePanel", "tabs"],
    "host_permissions": ["<all_urls>"],
    "background": {
      "service_worker": "./background.js"
    },
    "icons": {
    "16": "extensionIcon.png",
    "32": "extensionIcon.png",
    "48": "extensionIcon.png",
    "128": "extensionIcon.png"
  }
  }
  